<div class="container px-5 px-sm-0">
  <div align="center">
  <h1>
    <b>
      MyPage Edit
    </b>
  </h1>
  <div class="row">
    <div class="col-12">
      <table class="table table-hover table-inverse">
        <%= form_with model: @user do |f| %>
          <div class="form-group mt-5">
            <label for="profile_image">Profile Image</label><br>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <label for="user_name">User Name</label><br>
            <%= f.text_field :user_name %>
          </div>
          <div class="form-group">
            <label for="email">E-Mail</label><br>
            <%= f.text_field :email %>
          </div>
          <div class="form-group">
            <label for="introduction">Introduction</label><br>
            <%= f.text_area :introduction %>
          </div>
          <div class="form-group">
            <label for="favorite_bean">Your Favorite Cafe or Beans</label><br>
            <%= f.text_field :favorite_bean %>
          </div>
          <div class="form-group mt-5">
            <%= f.submit 'UPDATE',class: "btn btn-success" %>
            <%= link_to 'BACK', user_path(@user.id), class: "btn btn-primary" %>
          </div>
        <% end %>
      </table>
    </div>
  </div>
 </div>
</div>